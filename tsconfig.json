{
	"compilerOptions": {
		"allowSyntheticDefaultImports": false,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"removeComments": true,
    "esModuleInterop": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"noImplicitThis": true,
		"sourceMap": true,
		"allowJs": true,
		"lib": ["ESNext"],
		"outDir": "build"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
